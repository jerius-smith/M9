<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.gatech.cs2340.spacetraders">

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.PoliceActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_police"
            android:theme="@style/FullscreenTheme"></activity>
        <activity
            android:name=".views.RandomEventActivity"
            android:label="@string/title_activity_random_event"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".views.AttackActivity" />
        <activity android:name=".views.TravelActivity" />
        <activity android:name=".views.MarketActivity" />
        <activity android:name=".views.PlanetActivity" />
        <activity android:name=".views.WelcomeActivity" />
        <activity android:name=".views.ConfigurationActivity" />
        <activity android:name=".views.MiniGameActivity" />
        <activity
            android:name=".views.MainActivity"
            android:exported="true"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
